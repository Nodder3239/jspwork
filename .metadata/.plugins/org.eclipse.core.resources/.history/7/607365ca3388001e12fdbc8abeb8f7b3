<%
    int num = request.getIntHeader("num");

	
	if(num == null){
		out.println("<script>");
		out.println("alert('숫자를 입력해주세요')");
		out.println("history.back()");	//이전 페이지로 이동
		out.println("</script>");
	}else{
		if(num%2 == 0){
			out.println("로그인 성공");
		}else{
			out.println("로그인 실패");
		}
	}
%>